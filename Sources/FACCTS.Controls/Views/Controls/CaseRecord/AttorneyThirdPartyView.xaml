<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:this="clr-namespace:FACCTS.Controls"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
    xmlns:cal="http://www.caliburnproject.org"
	mc:Ignorable="d"
	x:Class="FACCTS.Controls.AttorneyThirdPartyView"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="332.239" Background="{DynamicResource ControlBackgroundBrush}">

	<GroupBox Header="Third Party Attorney" Grid.IsSharedSizeScope="True">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" SharedSizeGroup="Column1"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" MinHeight="50"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
            <StackPanel VerticalAlignment="Center"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        DataContext="{Binding CaseRecord.ThirdPartyData, Mode=OneWay}">
                <CheckBox Content="Pro Per"
                          Margin="0,0,8,0"
                          IsChecked="{Binding IsThirdPartyProPer, Mode=TwoWay}"/>
                <CheckBox Content="Third party is Requestor in EA Case"
                          Margin="8,0,0,0"
                          IsChecked="{Binding IsThirdPartyRequestorInEACase, Mode=TwoWay}"/>
                
			</StackPanel>
			<ContentControl Grid.Row="1" Grid.ColumnSpan="2" >
                <this:AttorneyView DataContext="{Binding CurrentHistoryRecord.ThirdPartyData.Attorney, Mode=OneWay}"/>
			</ContentControl>
		</Grid>
	</GroupBox>
</UserControl>