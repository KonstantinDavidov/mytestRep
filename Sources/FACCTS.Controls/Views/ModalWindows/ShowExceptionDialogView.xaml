<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:FACCTS.Controls" xmlns:cal="http://www.caliburnproject.org"
	 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Class="FACCTS.Controls.Views.ShowExceptionDialogView"
	xmlns:vm="clr-namespace:FACCTS.Controls.ViewModels"
	x:Name="Window"
	mc:Ignorable="d" 
	d:DataContext="{d:DesignInstance Type=vm:ShowExceptionDialogViewModel, IsDesignTimeCreatable=True}"
	Title="{Binding DisplayName, Mode=OneWay}"
	WindowStartupLocation="CenterScreen" ResizeMode="NoResize" SizeToContent="WidthAndHeight" cal:Bind.AtDesignTime="True" >
	<local:ShowExceptionControlView/>
</Window>